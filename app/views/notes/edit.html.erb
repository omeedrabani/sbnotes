<h1>Edit Note</h1>
 
<p>
  <%= link_to 'View Index', notes_path %>
</p>

<p>
  <%= link_to 'Cancel edit', note_path(@note) %>
</p>

<%= form_for :note, url: note_path(@note), method: :patch do |f| %>
 
  <%= render 'shared/error_messages_note' %>
 
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<% end %>
 
