<h1>Edit Settings</h1>
 
<p>
  
  <%= link_to 'Cancel', user_path(@user), class: "btn btn-warning" %>

</p>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages_user' %>
      
      <%= f.label :name %>
      <%= f.text_field :name , class: 'form-control' %><br>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br>

      <%= f.label :password %>
      <%= f.password_field :password , class: 'form-control' %><br>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation , class: 'form-control' %><br>

      <%= f.submit "Save Changes", class: "btn btn-success" %>
    <% end %>
  </div>
</div>

<br>

<%= link_to 'Delete Account', user_path, method: :delete, data: {confirm: 'Are you sure you want to delete your account?'}, class: "btn btn-danger" %>

