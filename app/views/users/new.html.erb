<% provide(:title, 'Sign up') %>
<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages_user' %>
      
      <%= f.label :name %>
      <%= f.text_field :name , class: 'form-control' %><br>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %><br>

      <%= f.label :password %>
      <%= f.password_field :password , class: 'form-control' %><br>

      <%= f.label :password_confirmation, "Confirm Password" %>
      <%= f.password_field :password_confirmation , class: 'form-control' %><br>

      <%= f.label :is_public, "Make My Profile Public" %><br>
      <%= f.check_box :is_public %><br><br>

      <%= f.submit "Create My Account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
