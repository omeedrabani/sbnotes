<!DOCTYPE html>
<html>
<head>
  <title>SBnotes</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
    <ul class="nav nav-pills">
	<!-- 	<li role="presentation" style="padding-left: 10px; font-size: 150%"> SBnotes <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></li> -->

    <% if logged_in? %>
    <li role="presentation" class="active"><a href="/notes">SBnotes <span class="glyphicon glyphicon-pushpin" aria-hidden="true"></span></a></li>
    <li role="presentation"><a href="/search"><span title="Search" class="glyphicon glyphicon-search" aria-hidden="true"></span></a></li>
    <!--<li role="presentation"><a href="/list">Users</a></li>-->
    <li role="presentation"><a href= <%= user_path(current_user) %> ><span title="Settings" class="glyphicon glyphicon-cog" aria-hidden="true"></span></a></li>
    <li role="presentation"><a href="/about"><span title="About" class="glyphicon glyphicon-question-sign" aria-hidden="true"></span></a></li>
    
    <li role="presentation" style="padding-right: 20px; padding-top: 10 px"><%= link_to '<span title="Log out" class="glyphicon glyphicon-off" aria-hidden="true"></span>'.html_safe, logout_path, method: :delete %></li>
    
    <% else %>
    <li role="presentation" class="active"><a href="/">SBnotes <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></li>
		
    <li role="presentation"><a href="/search"><span title="Search" class="glyphicon glyphicon-search" aria-hidden="true"></span></a></li>
    
    <li role="presentation"><a href="/signup"><span title="Sign Up" class="glyphicon glyphicon-hand-up" aria-hidden="true"></span></a></li>
    
     <li role="presentation"><a href="/about"><span title="About" class="glyphicon glyphicon-question-sign" aria-hidden="true"></span></a></li>

    <% end %>

	</ul>
  <div class="container">
    <%= yield %>
    <%= debug(params) if Rails.env.develpoment? %>
	</div>
</body>
</html>


